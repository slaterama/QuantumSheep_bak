<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:id="@+id/container"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="horizontal"
			  tools:context="com.slaterama.quantumsheep.view.PatternActivity"
			  tools:ignore="MergeRootFrame">

	<fragment
		android:id="@+id/architecture_fragment_one"
		android:name="com.slaterama.quantumsheep.view.PatternOneFragment"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		tools:layout="@layout/fragment_architecture_one"/>

	<fragment
		android:id="@+id/architecture_fragment_two"
		android:name="com.slaterama.quantumsheep.view.PatternTwoFragment"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		tools:layout="@layout/fragment_architecture_two"/>

</LinearLayout>
