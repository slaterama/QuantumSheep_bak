<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:id="@+id/container"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="horizontal"
			  tools:context="com.slaterama.quantumsheep.view.MvpActivity"
			  tools:ignore="MergeRootFrame">

	<fragment
		android:id="@+id/first_pattern_fragment"
		android:name="com.slaterama.quantumsheep.view.MvpFragmentOne"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		tools:layout="@layout/fragment_first_pattern"/>

	<fragment
		android:id="@+id/second_pattern_fragment"
		android:name="com.slaterama.quantumsheep.view.MvpFragmentTwo"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		tools:layout="@layout/fragment_second_pattern"/>

</LinearLayout>
