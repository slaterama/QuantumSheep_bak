<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:id="@+id/container"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context="com.slaterama.quantumsheep.view.ArchitectureActivity"
			  tools:ignore="MergeRootFrame">

	<fragment
		android:id="@+id/architecture_fragment_one"
		android:name="com.slaterama.quantumsheep.view.ArchitectureOneFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		tools:layout="@layout/fragment_architecture_one"/>

	<fragment
		android:id="@+id/architecture_fragment_two"
		android:name="com.slaterama.quantumsheep.view.ArchitectureTwoFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		tools:layout="@layout/fragment_architecture_two"/>

</LinearLayout>
