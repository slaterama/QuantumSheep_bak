<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slaterama.quantumsheep" >

    <application
        android:name=".QuantumSheepApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ArchitectureActivity"
            android:label="@string/architecture_activity_title" >
			<intent-filter>
				<action android:name="com.slaterama.quantumsheep.action.ARCHITECTURE" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
        </activity>

    </application>

</manifest>
